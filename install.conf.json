[
        {
                "defaults": {
                        "link": {
                                "relink": true,
                                "create": true
                        }
                }
        },

        {
            "clean": ["~", "~/.config/fish"]
        },
        {
            "shell":[
                ["mkdir -p ~/config", "Creating config folder"]
            ]
        },
        {
            "link": {
                "~/.dotfiles": "",
                "~/.vimrc": "vimrc",
                "~/.ideavimrc":{
                        "path": "ideavimrc",
                        "relink": true
                },
                "~/.irssi": "irssi/",
                "~/.vim": "vim/",
                "~/.config/fish": "config/fish/",
                "~/.config/termite/config": "config/termite/config",
                "~/.config/omf": "config/omf/",
                "~/.gitconfig": "gitconfig",
                "~/.i3/config": "i3/config",
                "~/i3blocks.conf": "i3/i3blocks.conf"
            }
        }
]
