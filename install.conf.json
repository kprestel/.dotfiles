[
        {
            "clean": ["~"]
        },
        {
            "shell":[
                ["mkdir -p ~/config", "Creating config folder"]
            ]
        },
        {
            "link": {
                "~/.dotfiles": "",
                "~/.vimrc": "vimrc",
                "~/.ideavimrc":{
                        "path": "ideavimrc",
                        "relink": true
                },
                "~/.irssi": "irssi/",
                "~/.vim": "vim/",
                "~/.config/fish": "config/fish/",
                "~/.config/fisherman": "config/fisherman/",
                "~/.gitconfig": "gitconfig"
            }
        }
]
